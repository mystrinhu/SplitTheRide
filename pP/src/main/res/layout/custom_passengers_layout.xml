<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="horizontal">

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="fill_parent"
        android:layout_weight="2"
        android:orientation="vertical">

        <TextView android:id="@+id/line_a"
            android:textSize="18dp"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"/>

        <TextView android:id="@+id/line_b"
            android:textSize="12dp"
            android:textStyle="italic"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"/>

    </LinearLayout>

    <ImageButton
        android:id="@+id/editPassenger"
        android:contentDescription="Edit this info"
        android:layout_width="45dp"
        android:layout_height="45dp"
        android:onClick="editPassengerOnClickHandler"
        android:src="@drawable/ic_action_edit" />


    <ImageButton
        android:id="@+id/removePassenger"
        android:layout_width="45dp"
        android:layout_height="45dp"
        android:onClick="removePassengerOnClickHandler"
        android:src="@drawable/ic_action_discard" />

</LinearLayout>
